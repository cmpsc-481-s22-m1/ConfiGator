"""This module tests the generate_readme module."""

import os

from configator import generate_readme

def test_create_readme(mocker):
    """tests create_gatorgrader function, specifically
    gatorgrader.yml containing fastfail condition.
    """
    mock_open = mocker.mock_open()
    mocker.patch('builtins.open', mock_open)
    mocker.patch('os.mkdir')
    generate_readme.create_readme()
    assert "This is text." in mock_open().write.call_args.args[0]
